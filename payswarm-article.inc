   wp_enqueue_style( 'payswarm-style');
}

/**
 * Generates a JSON-LD asset object given all of the parameters that belong in
 * the asset description.
 *
 * @package payswarm
 * @since 1.0
 *
 * @param array $info The post info as generated by payswarm_get_post_info().
 * @param boolean $includeSignature true to include the signature.
 *
 * @return array the asset object.
 */
function payswarm_generate_asset_object($info, $includeSignature)
{
   $asset = array(
      '@context' => payswarm_create_default_jsonld_context(),
      '@id' => $info['asset_url'],
      '@type' => array('ps:Asset', 'ps:WebPage'),
      'dc:creator' => (object)array(
         'foaf:name' => $info['post_author']),
      'dc:title' => $info['post_title'],
      'ps:assetProvider' => $info['asset_provider'],
      'ps:contentUrl' => $info['post_url']);

   if($includeSignature)
   {
      $asset += array(
         'sec:signature' => (object)array(
            '@type' => 'sec:JsonLdSignature',
            'dc:created' => $info['asset_signature_created'],
            'dc:creator' => $info['public_key_url'],
            'sec:signatureValue' => $info['asset_signature'])
      );
   }

   return (object)$asset;
}

/**
 * Generates an asset hash given all of the parameters that belong in the
 * asset description.
 *
 * @package payswarm
 * @since 1.0
 *
 * @param array $info The post info as generated by payswarm_get_post_info().
 */
function payswarm_generate_asset_hash($info)
{
   $asset = payswarm_generate_asset_object($info, true);
   return payswarm_generate_json_hash($asset);
}

/**
 * Generates a JSON-LD listing object given all of the parameters that
 * belong in the listing description.
 *
 * @package payswarm
 * @since 1.0
 *
 * @param array $info The post info as generated by payswarm_get_post_info().
 * @param boolean $includeSignature true to include the signature.
 *
 * @return array the listing object.
 */
function payswarm_generate_listing_object($info, $includeSignature)
{
   $listing = array(
      '@id' => $info['listing_url'],
      '@type' => array('gr:Offering', 'ps:Listing'),
      'com:payee' => $info['listing_payee']['id'],
      'com:payeeRule' => (object)array(
         '@type' => 'com:PayeeRule',
         'com:destinationOwnerType' => 'ps:Authority',
         'com:maximumRate' => '' . $info['payswarm_auth_rate'],
         'com:rateContext' => array(
            'com:Inclusive',
            'com:Tax',
            'com:TaxExempt'),
         'com:rateType' => 'com:Percentage'),
      'ps:asset' => $info['asset_url'],
      'ps:assetHash' => $info['asset_hash'],
      'ps:license' => $info['license_url'],
      'ps:licenseHash' => $info['license_hash'],
      'ps:validFrom' => $info['listing_valid_from'],
      'ps:validUntil' => $info['listing_valid_until'],
   );

   if($includeSignature)
   {
      $listing += array(
         'sec:signature' => (object)array(
            '@type' => 'sec:JsonLdSignature',
            'dc:created' => $info['listing_signature_created'],
            'dc:creator' => $info['public_key_url'],
            'sec:signatureValue' => $info['listing_signature']
         )
      );
   }

   return (object)array(
      '@context' => payswarm_create_default_jsonld_context(),
      '@id' => array(
         (object)$listing,
         // payee
         (object)array(
            '@id' => $info['listing_payee']['id'],
            '@type' => 'com:Payee',
            'com:currency' => $info['listing_payee']['com:currency'],
            'com:destination' => $info['listing_payee']['com:destination'],
            'com:payeePosition' => 0,
            'com:rate' => '' . $info['listing_payee']['com:rate'],
            'com:rateType' => $info['listing_payee']['com:rateType'],
            'rdfs:comment' => $info['listing_payee']['rdfs:comment'],
         )
      )
   );
}

